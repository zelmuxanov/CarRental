@functions {
    string GetStatusBadgeColor(CarRental.Domain.Enums.BookingStatus status)
    {
        return status switch
        {
            CarRental.Domain.Enums.BookingStatus.Confirmed => "success",
            CarRental.Domain.Enums.BookingStatus.Pending => "warning",
            CarRental.Domain.Enums.BookingStatus.Completed => "info",
            CarRental.Domain.Enums.BookingStatus.Cancelled => "danger",
            _ => "secondary"
        };
    }
    
    string GetStatusText(CarRental.Domain.Enums.BookingStatus status)
    {
        return status switch
        {
            CarRental.Domain.Enums.BookingStatus.Confirmed => "–ü–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–æ",
            CarRental.Domain.Enums.BookingStatus.Pending => "–ù–∞ —Ä–∞—Å—Å–º–æ—Ç—Ä–µ–Ω–∏–∏",
            CarRental.Domain.Enums.BookingStatus.Completed => "–ó–∞–≤–µ—Ä—à–µ–Ω–æ",
            CarRental.Domain.Enums.BookingStatus.Cancelled => "–û—Ç–º–µ–Ω–µ–Ω–æ",
            _ => "–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ"
        };
    }
}

