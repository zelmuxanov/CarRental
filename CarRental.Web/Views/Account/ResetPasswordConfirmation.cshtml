@{
    ViewData["Title"] = "Пароль изменен";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="text-center mb-0">✅ Пароль успешно изменен</h2>
                </div>
                <div class="card-body p-4 text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                        <h4>Пароль успешно сброшен</h4>
                    </div>
                    
                    <p class="mb-4">
                        Ваш пароль был успешно изменен. Теперь вы можете войти в систему с новым паролем.
                    </p>

                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Login", "Account")" class="btn btn-success btn-lg">
                            Войти в систему
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>