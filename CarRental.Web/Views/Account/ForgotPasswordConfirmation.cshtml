@{
    ViewData["Title"] = "Инструкции отправлены";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="text-center mb-0">✅ Инструкции отправлены</h2>
                </div>
                <div class="card-body p-4 text-center">
                    <div class="mb-4">
                        <i class="fas fa-envelope fa-4x text-success mb-3"></i>
                        <h4>Проверьте вашу почту</h4>
                    </div>
                    
                    <p class="mb-4">
                        Мы отправили инструкции по восстановлению пароля на указанный email адрес.
                    </p>

                    <!-- Для демо-режима показываем токен -->
                    @if (TempData["ResetToken"] != null)
                    {
                        <div class="alert alert-info text-start">
                            <h6>Демо-режим:</h6>
                            <p class="mb-1"><strong>Email:</strong> @TempData["ResetEmail"]</p>
                            <p class="mb-1"><strong>Токен:</strong> @TempData["ResetToken"]</p>
                            <small class="text-muted">В продакшене токен отправляется по email</small>
                        </div>
                        
                        <a href="@Url.Action("ResetPassword", "Account", new { 
                            token = TempData["ResetToken"], 
                            email = TempData["ResetEmail"] 
                        })" class="btn btn-primary">
                            Перейти к сбросу пароля
                        </a>
                    }

                    <div class="mt-4">
                        <a href="@Url.Action("Login", "Account")" class="text-decoration-none">
                            ← Вернуться к входу
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>